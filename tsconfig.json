{
    "extends": "astro/tsconfigs/strict",
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "src/**/*.d.ts"
    ]
}